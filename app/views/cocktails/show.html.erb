
<div class="container" style="text-align:center;">
  <h2><%= @cocktail.name %></h2>

  <% @doses.each do |dose| %>
  <p><strong><%= dose.amount %></strong></p>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <% end %>

  <%= link_to("Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary") %>
  <%= link_to("Back", cocktails_path, class: "btn btn-primary") %>
  <%= link_to "Delete", cocktail_path(@cocktail), class: "btn btn-primary",
  method: :delete,
  data: { confirm: "Are you sure?" } %>
</div>
