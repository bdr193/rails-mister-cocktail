
<div class="container" style="text-align:center;">
  <h2><%= @cocktail.name %></h2>
  <div class="dose_block">
    <% @doses.each do |dose| %>
    <p><strong><%= dose.amount %></strong></p>
    <p><%= dose.description %></p>
    <p><%= dose.ingredient.name %> </p>
    <%= link_to "Delete dose", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
    <% end %>
    <br>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fit %>
    <br>
    <%= link_to("Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary") %>
    <%= link_to("Back", cocktails_path, class: "btn btn-primary") %>
    <%= link_to "Delete", cocktail_path(@cocktail), class: "btn btn-primary",
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  </div>
</div>
